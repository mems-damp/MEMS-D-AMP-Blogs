<!-- JavaScript for filtering -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('[data-filter]');
    const timelineButtons = document.querySelectorAll('[data-timeline]');
    const experienceCards = document.querySelectorAll('[data-category]');

    // Filter by category
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.getAttribute('data-filter');
            
            // Update active button
            filterButtons.forEach(btn => {
                btn.classList.remove('bg-accent', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            this.classList.remove('bg-gray-200', 'text-gray-700');
            this.classList.add('bg-accent', 'text-white');
            
            // Filter cards
            filterExperienceCards();
        });
    });

    // Filter by timeline
    timelineButtons.forEach(button => {
        button.addEventListener('click', function() {
            const timeline = this.getAttribute('data-timeline');
            
            // Update active button
            timelineButtons.forEach(btn => {
                btn.classList.remove('bg-accent', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            this.classList.remove('bg-gray-200', 'text-gray-700');
            this.classList.add('bg-accent', 'text-white');
            
            // Filter cards
            filterExperienceCards();
        });
    });

    function filterExperienceCards() {
        const activeFilter = document.querySelector('[data-filter].bg-accent').getAttribute('data-filter');
        const activeTimeline = document.querySelector('[data-timeline].bg-accent').getAttribute('data-timeline');

        experienceCards.forEach(card => {
            const category = card.getAttribute('data-category');
            const timeline = card.getAttribute('data-timeline');
            
            const showCategory = activeFilter === 'all' || category === activeFilter;
            const showTimeline = activeTimeline === 'all' || timeline === activeTimeline;
            
            if (showCategory && showTimeline) {
                card.style.display = 'block';
                card.classList.add('animate-fade-in');
            } else {
                card.style.display = 'none';
            }
        });
    }
});
</script> 